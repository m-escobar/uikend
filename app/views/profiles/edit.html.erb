<div class="row justify-content-center pb-5">
  <div class=" col-6">
    <h1 class="py-2">Editando Perfil</h1>
    <%= simple_form_for(@profile) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
        <%= f.input :name, label: "Nome completo:" %>
      </div>

      <div class="form-inputs">
        <%= f.input :cpf, input_html: { min: '1', step: 'any'}, label: "CPF:" %>
      </div>

      <div class="form-inputs">
        <%= f.input :company, label: "Nome da compania:" %>
      </div>

      <div class="form-inputs">
        <%= f.input :phone, input_html: { min: '1', step: 'any'}, label: "Telefone:" %>
      </div>

      <div class="form-actions btn btn-success mb-2 p-0">
        <%= f.button :submit %>
      </div>
    <% end %>
  </div>
</div>
